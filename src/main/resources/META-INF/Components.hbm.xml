<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="project.entities.Components" table="components">
        <meta attribute="class-description">
            This class contains components list.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="componentName" column="COMPONENT_NAME" type="string"/>
        <property name="weight" column="WEIGHT" type="big_decimal"/>
        <property name="price" column="PRICE" type="big_decimal"/>
    </class>

</hibernate-mapping>